[MASTER]

extension-pkg-whitelist=_pylibmc,ujson
ignore=testing
jobs=4


[MESSAGES CONTROL]

disable=fixme,ungrouped-imports


[REPORTS]

# text, parseable, colorized, json or msvs (visual studio)
output-format=parseable
reports=yes
score=yes


[REFACTORING]

max-nested-blocks=5


[BASIC]

include-naming-hint=yes


[FORMAT]

expected-line-ending-format=LF
max-line-length=79


[MISCELLANEOUS]

notes=FIXME,XXX,TODO,HACK


[CLASSES]

# TODO: could move func._spec to func.spec
exclude-protected=_spec


[DESIGN]

# TODO: think about removing this (default is 2)
min-public-methods=0


[IMPORTS]

allow-wildcard-with-all=no


[EXCEPTIONS]

# by default throws a warning for Exception
overgeneral-exceptions=
